#
# wm independent hotkeys
#

# program launcher
# super + d
#     dmenu_run
# TODO:
# super + d => menu tong hop
# super + r => run command
# super + shift + r => desktop app
# super + w => windows
super + w
    rofi -show window

super + r
    rofi -show run

# make sxhkd reload its configuration files:
# TODO add notification after load
super + shift + r
    pkill -SIGUSR1 sxhkd

#
# bspwm hotkeys
#

# quit bspwm normally
# super + shift + e
#     bspc quit

# close and kill
super + shift + {w,k}
    bspc node -{c,k}


# swap the current node and the biggest node
#alt + Return
#    bspc node -s biggest

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
    bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {x,y,z}
    bspc node -g {locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# focus the next/previous node / desktop
alt + {_,ctrl + }{Left,Right}
    bspc {node,desktop} -f {prev,next}


# focus the last node/desktop
#super + {grave,Tab}
#    bspc {node,desktop} -f last

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

# preselect the ratio
#super + ctrl + {1-9}
#    bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
    bspc node -p cancel

# Move window into presel position
#alt + shift {a,s,d,f}
#    bspc window -w {left.manual,down.manual,up.manual,right.manual}

# cancel the preselection for the focused desktop
#super + ctrl + shift + space
#    bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

super + {Left,Down,Up,Right}
    xdotool getwindowfocus windowmove --relative %1 {-20 0, 0 +20, 0 -20, +20 0}

# Move or resize window
#alt + button{1-3}
#    bspc pointer -g {move,resize_side,resize_corner}
#
## Needed for ^^^^
#alt + !button{1-3}
#    bspc pointer -t %i %i
#
#super + @button{1-3}
#    bspc pointer -u



# Audio controls (volume up, volume down, toggle mute)
XF86AudioRaiseVolume
    pactl set-sink-volume 0 +5%
XF86AudioLowerVolume
    pactl set-sink-volume 0 -5%
XF86AudioMute
    pactl set-sink-mute 0 toggle

# Sreen brightness controls (brightness up, brightness down)
XF86MonBrightnessUp
    xbacklight -inc 5
XF86MonBrightnessDown
    xbacklight -dec 5

# Media keys
XF86AudioPlay
    mpc toggle
XF86AudioNext
    mpc next
XF86AudioPrev
    mpc prev
XF86AudioStop
    mpc stop
XF86TouchpadToggle
    ~/.i3/touchpad.sh


