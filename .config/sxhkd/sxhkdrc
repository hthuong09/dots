super + shift + @l
    betterlockscreen -l


# Software shortcut
# browser
ctrl + alt + i
    chromium --remote-debugging-port=9222
# file manager
super + e
    kitty --class ranger_fm  -T "File Manager" /bin/sh -c "ranger"

super + shift + e
    kitty --class floating_ranger_fm  -T "File Manager" /bin/sh -c "ranger"

# terminal emulator
super + Return
    kitty

